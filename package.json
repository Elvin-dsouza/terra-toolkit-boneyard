{
  "name": "terra-toolkit",
  "private": true,
  "version": "4.26.0",
  "description": "Utilities to help when developing terra modules.",
  "main": "lib/index.js",
  "engines": {
    "node": ">=8.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerner/terra-toolkit"
  },
  "keywords": [
    "Cerner",
    "Terra",
    "Terra Toolkit",
    "terra-toolkit",
    "UI"
  ],
  "author": "Cerner Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/cerner/terra-toolkit/issues"
  },
  "eslintConfig": {
    "extends": "terra",
    "settings": {
      "polyfills": [
        "promises"
      ]
    }
  },
  "scripts": {
    "bootstrap:hoist": "lerna bootstrap --hoist",
    "clean:all": "lerna clean --yes && rm -rf node_modules",
    "clean:install": "npm run clean:all && npm install",
    "danger": "lerna run danger ci",
    "compile:build": "lerna ls | cut -d ' ' -f1 | xargs -I {} sh -c './node_modules/.bin/babel packages/{}/src --out-dir packages/{}/lib --copy-files'",
    "postinstall": "link-parent-bin && npm run bootstrap:hoist",
    "publish": "npm whoami && npm test && lerna publish",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "lerna run test:lint",
    "test:unit": "lerna run test:unit"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-runtime": "^6.26.0",
    "browserslist-config-terra": "^1.0.0",
    "danger": "^3.7.14",
    "eslint": "^5.12.0",
    "eslint-config-terra": "^2.2.0",
    "lerna": "^2.11.0",
    "link-parent-bin": "^0.2.0",
    "jest": "^23.1.0"
  }
}
